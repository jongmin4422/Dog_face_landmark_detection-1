<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GalleryActivity">

    <LinearLayout
        android:id="@+id/toplayer"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:gravity="center"
        tools:ignore="MissingConstraints">
        <Button
            android:layout_width="340px"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="50px"
            android:layout_gravity="center"
            android:text="취소"
            style="@style/Widget.AppCompat.Button.Borderless"
            >
        </Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:textColor="#5898CC"
            android:layout_marginHorizontal="15px"
            android:textSize="55px"
            android:text="CORI / AZZIT"/>

        <Button
            android:id="@+id/nextbtn"
            android:layout_width="340px"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="50px"
            android:text="다음"
            style="@style/Widget.AppCompat.Button.Borderless"
            >
        </Button>
    </LinearLayout>

    <!--    <ImageView-->
<!--        android:id="@+id/backimageView"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"-->
<!--        app:layout_constraintDimensionRatio="1:1"-->
<!--        app:layout_constraintTop_toTopOf="parent" />-->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="344dp"
        android:layout_height="314dp"
        android:layout_marginTop="52dp"
        android:scaleType="centerInside"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toplayer"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <Button
        android:id="@+id/selectBtn"
        android:gravity="center"
        android:layout_width="340px"
        android:layout_height="340px"
        android:background="@drawable/btn_red"
        android:textColor="@color/white"
        android:textSize="50px"
        android:text="사진 선택"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_marginHorizontal="370px"
        android:layout_marginVertical="300px"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
    </Button>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        app:layout_constraintTop_toBottomOf="@id/selectBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>